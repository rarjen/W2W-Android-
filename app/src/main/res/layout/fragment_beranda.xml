<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".view.fragments.BerandaFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:focusableInTouchMode="true"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="John Doe"/>
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"
        android:text="johndoe@gmail.com"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:elevation="5dp"
        android:src="@drawable/bell_svgrepo_com"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUpper"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="10dp"
        android:layout_height="145dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/statusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Status kamu"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="11sp">
            </TextView>

            <ImageView
                android:id="@+id/badgeImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/statusTv"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/badge_medal_svgrepo_com"
                />
            <TextView
                android:id="@+id/tvStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/statusTv"
                app:layout_constraintStart_toEndOf="@id/badgeImg"/>

            <TextView
                android:id="@+id/poinTV"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="wPoin Kamu"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="11sp">
            </TextView>

            <ImageView
                android:id="@+id/arrowPoint"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:layout_constraintTop_toBottomOf="@id/poinTV"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/totalPointValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintTop_toBottomOf="@id/poinTV"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@id/arrowPoint"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:text="110"/>

            <ImageView
                android:id="@+id/iconPoint"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/coin_type_point_svgrepo_com"
                app:layout_constraintTop_toBottomOf="@id/poinTV"
                app:layout_constraintEnd_toStartOf="@id/totalPointValue"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="6dp" />


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/tvStatusValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_marginTop="13dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/totalLangkahTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dividerHorizontal"
                android:text="Total langkah"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="12sp">
            </TextView>

            <TextView
                android:id="@+id/tvTotalLangkahValue"
                android:layout_width="65dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="15.421"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/totalLangkahTV"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/arrowLangkah"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:layout_constraintTop_toBottomOf="@id/totalLangkahTV"
                app:layout_constraintStart_toEndOf="@id/tvTotalLangkahValue"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"/>


            <View
                android:id="@+id/dividerVertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dividerHorizontal"
                android:layout_width="2dp"
                android:layout_marginTop="7dp"
                android:layout_height="52dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/aktivitasOlahragaTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/dividerVertical"
                app:layout_constraintTop_toBottomOf="@id/dividerHorizontal"
                android:text="Aktivitas olahraga"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:textSize="12sp">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userEmail"
        app:layout_constraintVertical_bias="0.0">


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>